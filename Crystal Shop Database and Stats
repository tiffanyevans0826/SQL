--display the database ordered by price.
SELECT * FROM crystals
ORDER BY price asc;

--display the sum of these products.
SELECT * FROM crystals;
SELECT SUM(PRICE) 
FROM crystals;

--what is the average price of an item in the shop?
SELECT AVG(PRICE)
FROM crystals;
SELECT * FROM crystals;

--display products where price is less than 15.
SELECT * FROM crystals WHERE price <15

